html
    Helvetica Neue, Calibri, sans-serif

body
    background-color: rgba(0, 0, 0, 0.05)

.container-fluid
    padding-left: 10px;
    padding-right: 10px;
    
.container
    padding-left: 5px
    padding-right: 5px

.header h1
    font-family: 'Miltonian', sans-serif
    text-align: right
    font-size: 48px
    text-align: right
    padding-bottom: 20px

.header h1 a
    text-decoration: none

.social
    padding-right: 10px
h2
    background: #BDBB9B

.center
    text-align: center

h3.space
    min-height: 30px

h3.space a
    word-wrap: break-word

hr.tight
    margin: 5px 0

.footer
    border-top: 1px solid #eee
    padding-top: 5px

    
input[type=text]
    font-size:18px;

.pagination
    margin-top: 0px
    margin-bottom: 1px
    
.image
    float: right
    min-height: 44px

.explanation
    display: inline
    
.placeEntry, .moveDate, .pagination ul li a
    cursor: pointer
    
.entrySave    
    cursor: pointer
    text-decoration: none
    
.oneFifths
    min-width: 20%
    max-width: 20%

.twoFifths
    width: 40%    

.threeFifths
    width: 60%

.fourFifths    
    width: 80%

.halfWidth
    float: left
    width: 50%;

.entry_data

.entry_metadata

#entriesDisplay hr
    margin: 0px

.entry_data table
    max-width: 215px
    margin-bottom: 0px
    
.entry_metadata table
    max-width: 215px
    margin-bottom: 0px    
    
.entry_data table td
    padding: 10px 0 0 0    
    border-top: 0px
    
.entry_metadata table td    
    padding: 10px 0 0 0    
    border-top: 0px
    
#entryForm.well
    background-color: #efefef;

ul.entrylist
    padding: 0
    
ul.entrylist li
    background-color:white;
    padding: 0;

ul.entrylist li.meta
    border-bottom: 1px solid #ddd

.entriesPager
    background-color: #ddd
    
p.entry
    margin: 0
    padding: 10px
    
p.date
    margin: 0
    padding: 10px 0 5px 5px

p i
    margin: 10px 0 0 0
    
.entrymeta
    padding: 0 10px 10px 10px