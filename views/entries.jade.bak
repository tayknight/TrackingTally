    div.navbar
        div.navbar-inner
            div.container
                a(data-toggle='collapse', data-target='.nav-collapse').btn.btn-navbar
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                
                a.brand(href='#') Entries
                div.nav-collapse
                    ul.nav
                        li 
                            a(id='yesterdayLink') Previous
                        li
                            a(id='nextLink') Next
table.table.table-bordered.table-condensed.table-striped
    thead
        tr
            caption= requestedDisplay
    thead
        tr
            th Verb
            th Quant
            th Adj
            th Noun
            // th Comment
            th
    each entry in entries
        tr(id="entry_row_" + entry.id).entryRow
            td.verb= entry.verb
            td.quantifier= entry.quantifier
            td.adjective= entry.adjective
            td.noun= entry.noun
            // td.comment= entry.comment
            td
                a(id=entry.id).placeEntry
                    img(src="/images/glyphicons/png/glyphicons_190_circle_plus.png")