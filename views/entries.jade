totalPages = Math.ceil(parseInt(entriesCount) / parseInt(defaultEntriesPageLength))
requested = parseInt(requested)
entriesCount = parseInt(entriesCount)

div#entriesPagination(data-entries-count=entriesCount, data-requested=requested, data-total-pages=totalPages)

- if (undefined != entries)
    ul.unstyled.entrylist.well
        each entry in entries
            li
                p.entry= entry.verb + ' ' + entry.quantifier + ' ' + entry.adjective + ' ' + entry.noun + '.'
                    - if (entry.comment)
                        br
                        =entry.comment
            li.meta
                div.row-fluid.entrymeta
                    div.span12.btn-group
                        a.btn.disabled
                            = entry.createdAt
                        - if (entry.public == 1)
                            a.btn.disabled
                                i.icon-eye-open
                        - else
                            a.btn.disabled
                                i.icon-eye-close
                        - if (entry.latitude != 0 && entry.longitude != 0)
                            a.btn.disabled
                                i.icon-map-marker
                        - else
                            a.btn.disabled
                                i.icon-ban-circle
                        a.btn
                            i.icon-search
                        a.btn
                            i.icon-edit
                        a(id=entry.id, data-verb=entry.verb, data-quantifier=entry.quantifier, data-adjective=entry.adjective, data-noun=entry.noun, data-comment=entry.comment).btn.placeEntry
                            i.icon-plus